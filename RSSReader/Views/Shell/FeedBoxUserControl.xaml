<UserControl
  x:Class="RSSReader.Views.Shell.FeedBoxUserControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:prism="http://prismlibrary.com/"
  xmlns:viewModels="clr-namespace:RSSReader.ViewModels"
  d:DesignHeight="500"
  d:DesignWidth="800"
  prism:ViewModelLocator.AutoWireViewModel="True"
  mc:Ignorable="d">

  <UserControl.Resources>
    <DataTemplate x:Key="DataTemplateFeedViewModel" DataType="viewModels:FeedViewModel">
      <Grid>
        <Grid>
          <StackPanel Background="White">
            <Grid Margin="12,12,12,0">
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>
              <TextBlock
                Grid.Row="0"
                Text="{Binding PublishedDate}"
                TextWrapping="NoWrap" />
              <!--  Foreground="{ThemeResource Foreground100SalmonBrush}" Style="{StaticResource CaptionTextBlockStyle}" /  -->

              <TextBlock
                Grid.Row="1"
                Margin="0,10,0,0"
                Text="{Binding Title}"
                TextTrimming="WordEllipsis"
                TextWrapping="Wrap" />

              <!--
                MaxLines="2"
                Foreground="{ThemeResource Foreground100BlackBrush}"
                Style="{StaticResource SubtitleTextBlockStyle}" /
              -->

              <TextBlock
                Grid.Row="2"
                Margin="0,4,0,12"
                Text="{Binding ShortDescription}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
              <!-->
                                           MaxLines="2"
                                           Foreground="{ThemeResource Foreground100BlackBrush}"
                                           Style="{StaticResource BodyTextBlockStyle}" />
                                       <-->
            </Grid>
            <Rectangle
              x:Name="BorderBottom"
              Grid.Row="2"
              Height="1"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Bottom" />
            <!--
              Fill="{ThemeResource Border20SalmonBrush}" /
            -->
          </StackPanel>
        </Grid>
        <ToggleButton
          HorizontalAlignment="Right"
          Content="&#xE1CE;"
          IsChecked="{Binding IsWatched, Mode=TwoWay}"
          IsThreeState="False"
          Style="{StaticResource MaterialDesignActionToggleButton}" />
      </Grid>
    </DataTemplate>
  </UserControl.Resources>

  <StackPanel>
    <Grid Margin="{StaticResource MarginAllSides12}">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="2*" />
      </Grid.ColumnDefinitions>

      <Label
        Margin="{StaticResource MarginBottom12}"
        Content="Feed"
        DockPanel.Dock="Top"
        FontSize="{StaticResource FontSizeExtraLarge}" />

      <!--  ItemsSource="{Binding GroupedContactsView}"  -->
      <ListBox
        x:Name="ListBoxFeeds2"
        Grid.Row="1"
        Grid.Column="0"
        MinWidth="240"
        Margin="{StaticResource MarginBottom12}"
        BorderThickness="0,0,0,0"
        DockPanel.Dock="Left"
        Focusable="True"
        IsSynchronizedWithCurrentItem="True"
        ItemTemplate="{StaticResource DataTemplateFeedViewModel}">
        <ListBox.GroupStyle>
          <GroupStyle>
            <GroupStyle.HeaderTemplate>
              <DataTemplate>
                <Border Margin="4,12,0,4">
                  <TextBlock FontSize="{StaticResource FontSizeExtraLarge}" FontWeight="SemiBold" />
                  <!--  Text="{Binding Path=Name, Converter={StaticResource NameToInitialConverter}}" /  -->
                </Border>
              </DataTemplate>
            </GroupStyle.HeaderTemplate>
          </GroupStyle>
        </ListBox.GroupStyle>
        <ListBox.ItemContainerStyle>
          <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
          </Style>
        </ListBox.ItemContainerStyle>
      </ListBox>

      <Border Grid.Row="1" Grid.Column="1">
        <!--  views:ContactForm DataContext="{Binding SelectedContact}" /  -->
      </Border>

    </Grid>
  </StackPanel>

</UserControl>
